@if (_isOpen)
{
    <div class="modal" tabindex="-1" role="dialog" id="addPublisherModal" style="display: block">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@_modalButtonsText</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="CloseModal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body my-3">
                    <form @onsubmit="HandleSubmit">
                        <div class="form-group">
                            <label for="inputPublisherName">Publisher Name</label>
                            <input type="text" class="form-control" id="inputPublisherName" placeholder="Enter publisher name" @bind="_publisherName" />
                        </div>
                        <div class="form-group">
                            <label for="inputPublisherYearOfCreation">Year of Creation</label>
                            <input type="number" class="form-control" id="inputPublisherYearOfCreation" placeholder="Enter Year of creation" @bind="_yearOfCreation"/>
                        </div>
                        <div class="form-group">
                            <label for="inputPublisherCountry">Country</label>
                            <div class="form-group">
                                <RadzenDropDownDataGrid class="form-control" id="inputPublisherCountry" @bind-Value="@_selectedCountry" Data=@_countries.Select(p => p.Name) TValue="string" />
                                <CountryModal OnCountryAdded="AddNewCountry"/>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mt-4">@_modalButtonsText</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="CloseModal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addPublisherModal" @onclick="OpenModal">
    @_modalButtonsText
</button>