@if (_isOpen)
{
    <div class="modal" tabindex="-1" role="dialog" id="addUserModal" style="display: block; background: rgba(0, 0, 0, 0.5);">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@_modalButtonsText</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="CloseModal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body my-3">
                    <form @onsubmit="HandleSubmit">
                        <div class="form-group">
                            <label for="inputUserName">Name</label>
                            <input type="text" class="form-control" id="inputUserName" placeholder="Enter User name" @bind="_userName" />
                        </div>
                        <div class="form-group">
                            <label for="inputUserSurname">Surname</label>
                            <input type="text" class="form-control" id="inputUserSurname" placeholder="Enter User surname" @bind="_userSurname" />
                        </div>
                        <div class="form-group">
                            <label for="inputUserEmail">Email</label>
                            <input type="text" class="form-control" id="inputUserEmail" placeholder="Enter User email" @bind="_userEmail" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mt-5">@_modalButtonsText</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="CloseModal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addUserModal" @onclick="OpenModal">
    @_modalButtonsText
</button>