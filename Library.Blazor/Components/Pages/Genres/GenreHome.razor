@page "/genres"

<div class="container mt-4">
    @if (_isLoading)
    {
        <div class="col-md-12">
            <h3 class="text-center">Loading...</h3>
        </div>
    }
    else
    {
        <div class="row justify-content-between align-items-center mb-3">
            <div class="col-auto">
                <h2>Genres</h2>
            </div>
            <div class="col-auto">
                <GenreModal/>
            </div>
        </div>
        <RadzenGrid TItem="GenreResponseDto" Data="@_genres" AllowAlternatingRows="false" FilterMode="FilterMode.Advanced" AllowSorting="true" PageSize="5" AllowPaging="true" PagerHorizontalAlign="HorizontalAlign.Left" ShowPagingSummary="true">
            <Columns>
                <RadzenGridColumn TItem="GenreResponseDto" Property="Id" Title="Id"></RadzenGridColumn>
                <RadzenGridColumn TItem="GenreResponseDto" Property="Name" Title="Name"></RadzenGridColumn>
                <RadzenGridColumn TItem="GenreResponseDto">
                    <Template Context="genre" >
                        <div class="btn-group">
                            <GenreModal IsEdited="true" GenreToEdit="genre" OnGenreEdited="EditGenre"/>
                            <button class="btn btn-danger" @onclick="() => DeleteGenreAsync(genre)">Delete</button>
                        </div>
                    </Template>
                </RadzenGridColumn>
            </Columns>
        </RadzenGrid>
    }
</div>